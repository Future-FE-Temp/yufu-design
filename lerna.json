{
  "packages": [
    "packages/*"
  ],
  "version": "5.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "**/__tests/**"
      ],
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.md"
      ],
      "changelogPreset": {
        "name": "@yffed/conventional-changelog-preset",
        "scopeSequence": [
          {
            "scope": "@yffed/core"
          },
          {
            "scope": "@yffed/icons"
          },
          {
            "scope": "@yffed/docs",
            "alias": "ðŸ“– Documentation",
            "mixin": true
          }
        ],
        "typeSequence": [
          "feat",
          "fix",
          "refactor"
        ]
      }
    }
  }
}
