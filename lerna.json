{
  "packages": [
    "packages/*"
  ],
  "version": "3.1.2",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "**/__tests/**"
      ],
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.md"
      ],
      "changelogPreset": {
        "name": "@yffed/conventional-changelog-preset",
        "scopeSequence": [
          "@yffed/core",
          "@yffed/icons",
          "@yffed/docs",
          "@yffed/cz-changelog",
          "@yffed/conventional-changelog-preset"
        ]
      }
    }
  }
}
