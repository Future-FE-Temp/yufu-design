{
  "packages": [
    "packages/*"
  ],
  "version": "4.0.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "**/__tests/**"
      ],
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.md"
      ],
      "changelogPreset": {
        "name": "@yffed/conventional-changelog-preset",
        "scopeSequence": [
          { "scope": "@yffed/core" },
          { "scope": "@yffed/icons" },
          { "scope": "@yffed/docs", "alias": "ðŸ“– Documentation" }
        ],
        "typeSequence": ["feat", "fix", "refactor"]
      }
    }
  }
}
